<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/knpipsum/css/ipsum.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/knpipsum/css/highlight.css') }}" type="text/css" media="all" />
        {% endblock %}
        <title>{% block title %}Ipsum Bundle{% endblock %} - KnpIpsum</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="ipsum-wrapper">
            <div id="ipsum-header">
                <div id="by-knplabs">Brought to you with tenderness by the <a href="http://www.knplabs.com/">Knp team</a></div>
                <a class="img-link" href="{{ path('knp_ipsum') }}">
                    <img src="{{ asset('bundles/knpipsum/images/knpipsum.jpg') }}" alt="KnpIpsum">
                </a>
                <p id="tagline">A Symfony2 Tutorial Application</p>
            </div>

            {% block content_header %}
                <ul id="nav-main">
                    <li class="first"><a href="{{ path('knp_ipsum') }}">Home</a></li>
                    <li><a href="http://knplabs.com/en/knpipsum-symfony2-tutorial-project-builder">Download KnpIpsum</a></li>
                    <li class="last"><a href="https://github.com/knplabs/KnpIpsum">Source code on github</a></li>
                </ul>

                <div style="clear: both"></div>
            {% endblock %}

            <div id="ipsum-security">{% block security %}{% endblock %}</div>
            <h1 class="content-title">{{ block('title') }}</h1>

            {% if app.session.hasFlash('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ app.session.getFlash('notice') }}
                </div>
            {% endif %}

            <section class="ipsum-content">
                {% block content %}
                {% endblock %}
            </section>

            {% if code is defined %}
                <h2>Code behind this page</h2>
                <section class="ipsum-content ipsum-code-behind">{{ code|raw }}</section>
            {% endif %}
        </div>

        <script src="{{ asset('bundles/knpipsum/js/highlight.pack.js') }}"></script>
        <script>
            hljs.initHighlightingOnLoad();
        </script>
    </body>
</html>
